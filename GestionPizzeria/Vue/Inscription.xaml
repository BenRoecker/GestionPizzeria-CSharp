<Page x:Class="GestionPizzeria.Vue.Inscription"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GestionPizzeria.Vue"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Inscription">

    <Grid>
        <TextBlock FontSize="30" HorizontalAlignment="Center" Text="Veuillez indiquez vos informations pour pouvoir vous enregistrer dans nos bases de données" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox Name="name" FontSize="25" HorizontalAlignment="Center" Margin="0,166,0,0" Text="Name" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <TextBox Name ="surname" FontSize="25" HorizontalAlignment="Center" Margin="0,222,0,0" Text="Surname" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <TextBox Name ="phoneNumber" FontSize="25" HorizontalAlignment="Center" Margin="0,278,0,0" Text="Phone number" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Button Name ="creation" FontSize="25" Content="Finir inscription" HorizontalAlignment="Center" Margin="0,400,0,0" VerticalAlignment="Top" Height="39" Width="250" RenderTransformOrigin="0.297,0.824" Click="ComeBack"/>
    </Grid>
</Page>
